{
  "name": "@automerge/automerge-repo-monorepo",
  "version": "1.0.13",
  "description": "Automerge Repo monorepo",
  "main": "packages/automerge-repo/dist/index.js",
  "repository": "https://github.com/automerge/automerge-repo",
  "author": "Peter van Hardenberg <pvh@pvh.ca>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "lerna run build",
    "dev:demo": "yarn workspace @automerge/automerge-repo-demo-todo dev",
    "dev:svelte-demo": "yarn workspace @automerge/automerge-repo-demo-counter-svelte dev",
    "dev": "run-p watch start:syncserver dev:demo",
    "pub": "lerna publish --yes",
    "start:syncserver": "cross-env DEBUG='WebsocketServer' yarn workspace @automerge/example-sync-server start",
    "repocheck": "manypkg check",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --coverage --ui",
    "watch": "lerna run watch --parallel --stream"
  },
  "engines": {
    "node": ">= 18.x",
    "yarn": "^1.0.0"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@automerge/automerge": "^2.1.5",
    "@manypkg/cli": "^0.21.0",
    "@types/debug": "^4.1.7",
    "@types/node": "^20.4.8",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "c8": "^7.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lerna": "^6.6.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "prettier": "^2.7.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.11",
    "vite-plugin-top-level-await": "^1.3.0",
    "vite-plugin-wasm": "^3.2.2",
    "vitest": "^0.34.6"
  }
}
